<h2>Admin Dashboard</h2>

<%= button_to "Create a new user", new_admin_user_path, method: :get %>

<table class="table table-striped">
  <tr>
    <th>User</th>
    <th>Points</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.points %><%= button_to "Edit", edit_admin_user_path(user), method: :get %></td>
  </tr>
  <% end %>
</table>
