<%= form_for(:session, url: login_path) do |f| %>
  <div class="form_group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="form_group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Login", class: 'btn btn-success' %>
<% end %>